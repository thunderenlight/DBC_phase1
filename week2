 puts list.tasks[2].task == "Walk into town seeking revenge"
p list.tasks[1].mark_as_complete!
puts list.tasks

puts list.tasks[1]
list.list_to_file

commands = Hash.new { |hash, key| hash[key] = "#{key}_task!" }

if ARGV.any?
  list = List.new
  command = ARGV.shift
  case command
  when "list"
    puts list.tasks
  when "delete", "complete", "add"
    list.send(commands[command], ARGV.join(" "))
    puts list.tasks
  end
end
